{
  "manifest_version": 3,
  "name": "SnapNote AI",
  "version": "1.0.0",
  "description": "One-click screenshot and note-taking Chrome extension with AI-powered insights.",
  "permissions": ["tabs", "storage", "activeTab", "scripting", "downloads", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
